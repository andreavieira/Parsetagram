<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/caption_tv"
        android:layout_marginBottom="10dp"
        android:text="date"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/caption_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/likes_tv"
        android:text="Caption here."
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/likes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/like_iv"
        android:text="0 likes"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/user_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/instagram_user_filled_24" />

    <TextView
        android:id="@+id/user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/likes_tv"
        android:text="username"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/post_iv"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="35dp"
        android:src="#ffff" />

    <ImageView
        android:id="@+id/like_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_iv"
        android:clickable="true"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/comment_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/post_iv"
        android:layout_toEndOf="@+id/user_iv"
        android:clickable="true"
        app:srcCompat="@drawable/ufi_comment" />
</RelativeLayout>